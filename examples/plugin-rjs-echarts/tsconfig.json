{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "jsx": "react",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ]
    },
    "types": [],
    "typeRoots": [
      "./typings"
    ]
  },
  "include": [
    "src/**/*.*",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}
